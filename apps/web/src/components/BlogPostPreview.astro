---
import type { Router } from 'src/capabilities/router';
import * as date from 'src/lib/date';
import * as core from 'src/core';

interface Props {
  router: Router;
  blogPost: core.types.BlogPost;
}

const { router, blogPost } = Astro.props;
---
<>
  <a class="text-link" href={core.path.fromPathByLocale(`journal/${blogPost.id}`)(router.locale)}>
    <span class="block text-lg font-medium">
      {blogPost.title}
    </span>
  </a>
  <span class="text-xs">
    {date.toLocalizedIso(blogPost.publishedAt)}
  </span>
  <p class="text-sm">
    {blogPost.description}
  </p>
</>
