<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
	}

  @font-face {
    font-family: Karla;
    src: url('/fonts/Karla/Karla-Regular.ttf');
  }

  @font-face {
    font-family: Karla-SemiBold;
    src: url('/fonts/Karla/Karla-SemiBold.ttf');
  }

  input {
    outline: none !important;
  }

  html {
    @apply text-base text-gray-600;
       font-family: 'ui-sans-serif', 'helvetica neue', 'sans-serif';
    line-height: 1.5;
    letter-spacing: -0.01em;
  }

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

  a.text-link {
    transition: all;
  }

  a.text-link:hover {
    @apply text-gray-600;
    text-decoration-line: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 4px;
  }

  a.text-link.active {
    @apply text-gray-600;
    text-decoration-line: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 4px;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: 1.0;
  }

  article {
    @apply text-base;

    section {
      @apply mb-4;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      @apply text-gray-700;

      position: relative;

      & > .link {
        @apply text-gray-500 ml-2 text-lg;

        position: absolute;
        top: 50%;
        cursor: pointer;
        opacity: 0;
        transform: translate(-8px, -50%);
        transition:
          opacity 0.2s ease 0s,
          transform 0.2s ease 0s;
      }
      &:hover > .link {
        opacity: 1;
        transform: translate(0, -50%);
      }
    }
    h1 {
      @apply font-medium text-3xl mb-6;
    }
    h2 {
      @apply font-medium text-2xl mb-5;
    }
    h3 {
      @apply font-medium text-xl mb-4;
    }
    h4 {
      @apply font-medium text-lg mb-3;
    }
    h5 {
      @apply font-medium text-base mb-2;
    }
    h6 {
      @apply font-medium text-sm mb-1;
    }

    a {
      @apply underline text-gray-800;
    }

    p {
      line-height: calc(1em + 0.75rem);

      &:not(:last-child) {
        @apply pb-4
      }
    }

    pre.sourceCode {
      font: Inconsolata, 'Lucida Console', Terminal, 'Courier New', Courier;
      padding-left: 20px;
      @apply text-sm border-gray-100 border-l-2 mt-1 mb-4;
    }
  }

  .table-of-contents {
    .active {
      @apply text-black;
      a {
        @apply underline;
      }
    }

    .inactive {
      @apply text-gray-400;
    }
  }

</style>
